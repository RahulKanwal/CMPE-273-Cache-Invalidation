FROM openjdk:21-jdk-slim

WORKDIR /app

# Copy Maven files from api-gateway directory
COPY eds-lite/api-gateway/pom.xml .
COPY eds-lite/api-gateway/src ./src

# Install Maven
RUN apt-get update && apt-get install -y maven

# Build the application
RUN mvn clean package -DskipTests

# Expose port
EXPOSE 8080

# Run the application
CMD ["java", "-jar", "target/api-gateway-1.0.0.jar"]
