FROM eclipse-temurin:21-jdk-jammy

WORKDIR /app

# Copy Maven files from user-service directory
COPY eds-lite/user-service/pom.xml .
COPY eds-lite/user-service/src ./src

# Install Maven
RUN apt-get update && apt-get install -y maven

# Build the application
RUN mvn clean package -DskipTests

# Expose port
EXPOSE 8083

# Run the application
CMD ["java", "-jar", "target/user-service-1.0.0.jar"]
