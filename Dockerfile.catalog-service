FROM openjdk:21-jdk-slim

WORKDIR /app

# Copy Maven files from catalog-service directory
COPY eds-lite/catalog-service/pom.xml .
COPY eds-lite/catalog-service/src ./src

# Install Maven
RUN apt-get update && apt-get install -y maven

# Build the application
RUN mvn clean package -DskipTests

# Expose port
EXPOSE 8081

# Run the application
CMD ["java", "-jar", "target/catalog-service-1.0.0.jar"]
